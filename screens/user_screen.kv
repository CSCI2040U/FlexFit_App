<UserScreen>
    name: 'user'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(50)
        pos_hint: {"center_x": 0.5}

        # Profile Section
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(100)
            spacing: dp(10)
            pos_hint: {'center_x': 0.5}  # Centering entire profile section

            Image:
                source: "logo.png"
                size_hint: None, None
                size: dp(80), dp(80)
                allow_stretch: True
                keep_ratio: True
                pos_hint: {'center_y': 0.5}
                pos_hint: {'center_x': 0.5}

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: 1
                pos_hint: {'center_y': 0.5}
                pos_hint: {'center_x': 0.5}
                spacing: dp(20)

                MDLabel:
                    text: "Hello User!"
                    bold: True
                    font_style: "H5"
                    halign: "center"

        # Height and Weight Section (Centered)
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: dp(40)
            size_hint: None, None
            width: dp(320)  # Adjusted width to center properly
            height: dp(80)
            pos_hint: {'center_x': 0.5}  # Ensures it's centered

            # Height Card
            MDCard:
                size_hint: None, None
                size: dp(140), dp(70)
                elevation: 2
                radius: [10]
                padding: dp(5)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(5)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: "Height - 5'10\""
                        halign: "center"

                    MDIconButton:
                        icon: "pencil"
                        user_font_size: "18sp"
                        pos_hint: {"center_x": 0.5}

            # Weight Card
            MDCard:
                size_hint: None, None
                size: dp(140), dp(70)
                elevation: 2
                radius: [10]
                padding: dp(5)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(5)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: "Weight - 80kg"
                        halign: "center"

                    MDIconButton:
                        icon: "pencil"
                        user_font_size: "18sp"
                        pos_hint: {"center_x": 0.5}

        # Progress Section (Restored to Original Layout)
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint_x: 0.9
            pos_hint: {'center_x': 0.5}

            MDLabel:
                text: "1600/2000"
                halign: "center"
                font_style: "H6"

            MDRaisedButton:
                text: "Calories Goal"
                size_hint: None, None
                size: dp(140), dp(40)
                pos_hint: {"center_x": 0.5}

            MDProgressBar:
                value: 80
                size_hint_x: 0.9
                height: dp(8)
                pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "240/300 mins."
                halign: "center"
                font_style: "H6"

            MDRaisedButton:
                text: "Weekly Time Spent"
                size_hint: None, None
                size: dp(180), dp(40)
                pos_hint: {"center_x": 0.5}

        MDLabel:
            text: "Making good progress!"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: dp(40)

        # Bottom Navigation (Restored to Original Layout)
        MDBottomNavigation:
            id: bottom_nav
            height: "60dp"
            panel_color: "#eeeeee"
            pos_hint: {"bottom": 1}

            MDBottomNavigationItem:
                name: "home"
                text: "Home"
                icon: "home"
                on_tab_press: app.switch_to_screen("home")

            MDBottomNavigationItem:
                name: "saved"
                text: "Saved"
                icon: "bookmark"
                on_tab_press: app.switch_to_screen("saved")

            MDBottomNavigationItem:
                name: "user"
                text: "User"
                icon: "account"
                on_tab_press: app.switch_to_screen("user")