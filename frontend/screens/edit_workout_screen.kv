<EditWorkoutScreen>:
    name: "edit_workout"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            text: "Edit Workout"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Primary"
            size_hint_y: None
            height: dp(40)

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(20)
                padding: [0, dp(10), 0, dp(20)]

                MDTextField:
                    id: workout_name
                    hint_text: "Workout Name"
                    required: True

                MDTextField:
                    id: workout_description
                    hint_text: "Workout Description"
                    multiline: True

                MDTextField:
                    id: workout_reps
                    hint_text: "Suggested Reps (e.g. 12)"
                    input_filter: "int"

                MDLabel:
                    text: "Select Toughness Level"
                    font_style: "Subtitle1"
                    theme_text_color: "Secondary"

                MDBoxLayout:
                    spacing: dp(10)
                    adaptive_height: True
                    MDRaisedButton:
                        text: "Easy"
                        on_release: root.set_toughness("Easy")
                    MDRaisedButton:
                        text: "Medium"
                        on_release: root.set_toughness("Medium")
                    MDRaisedButton:
                        text: "Hard"
                        on_release: root.set_toughness("Hard")

                MDLabel:
                    text: "Select Categories"
                    font_style: "Subtitle1"
                    theme_text_color: "Secondary"

                MDBoxLayout:
                    spacing: dp(10)
                    adaptive_height: True
                    MDRaisedButton:
                        text: "With Equipment"
                        on_release: root.toggle_category("with equipment")
                    MDRaisedButton:
                        text: "Without Equipment"
                        on_release: root.toggle_category("without equipment")
                    MDRaisedButton:
                        text: "Outdoor"
                        on_release: root.toggle_category("outdoor")
                    MDRaisedButton:
                        text: "Wellness"
                        on_release: root.toggle_category("wellness")

                MDRaisedButton:
                    text: "Change Workout Image"
                    icon: "image"
                    pos_hint: {"center_x": 0.5}
                    on_release: root.select_image()

                MDLabel:
                    id: image_path_label
                    text: root.selected_image_path if root.selected_image_path else "No image selected"
                    halign: "center"
                    theme_text_color: "Hint"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDRaisedButton:
                    text: "ðŸ’¾ Save Changes"
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.submit_edit()

                MDRaisedButton:
                    text: "â¬…Go Back"
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: 0.7, 0.7, 0.7, 1
                    on_release: app.switch_to_home()
