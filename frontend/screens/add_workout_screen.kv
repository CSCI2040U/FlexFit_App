<AddWorkoutScreen>:
    name: "add_workout"
    selected_image_path: ""

    ScrollView:
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(20)
            size_hint_y: None
            height: self.minimum_height

            MDLabel:
                text: "Add a Workout"
                font_style: "H4"
                halign: "center"
                bold: True
                size_hint_y: None
                height: self.texture_size[1]

            MDTextField:
                id: workout_name
                hint_text: "Workout Name"
                mode: "rectangle"
                size_hint_x: 0.95
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: workout_description
                hint_text: "Workout Description"
                mode: "rectangle"
                size_hint_x: 0.95
                pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Select Toughness Level"
                font_style: "Subtitle1"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            MDBoxLayout:
                spacing: dp(10)
                size_hint_x: 0.95
                pos_hint: {"center_x": 0.5}

                MDRaisedButton:
                    text: "Easy"
                    on_release: root.set_toughness("Easy")

                MDRaisedButton:
                    text: "Medium"
                    on_release: root.set_toughness("Medium")

                MDRaisedButton:
                    text: "Hard"
                    on_release: root.set_toughness("Hard")

            MDLabel:
                text: "Select Categories"
                font_style: "Subtitle1"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            GridLayout:
                cols: 4
                spacing: dp(5)
                padding: [dp(5), 0]
                size_hint_x: 0.95
                pos_hint: {"center_x": 0.5}
                row_default_height: dp(20)
                row_force_default: True

                MDRaisedButton:
                    text: "With Equipment"
                    on_release: root.toggle_category("with equipment")
                MDRaisedButton:
                    text: "Without Equipment"
                    on_release: root.toggle_category("without equipment")
                MDRaisedButton:
                    text: "Outdoor"
                    on_release: root.toggle_category("outdoor")
                MDRaisedButton:
                    text: "Wellness"
                    on_release: root.toggle_category("wellness")

            MDLabel:
                text: "Suggested Repetitions"
                font_style: "Subtitle1"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            MDTextField:
                id: workout_reps
                hint_text: "Workout Reps"
                mode: "rectangle"
                size_hint_x: 0.95
                pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "Choose Image"
                size_hint_x: 0.6
                pos_hint: {"center_x": 0.5}
                on_release: root.select_image()

            MDRaisedButton:
                text: "Submit Workout"
                size_hint_x: 0.6
                pos_hint: {"center_x": 0.5}
                on_release: root.submit_workout()

            MDLabel:
                text: "[ref=user][b]‚Üê Go back[/b][/ref]"
                markup: True
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0.2, 0.4, 1, 1
                on_ref_press: app.switch_to_screen("all_workouts")
