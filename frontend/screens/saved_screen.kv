<SavedScreen>:
    name: "saved"

    MDScreen:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 1
            padding: dp(20)
            spacing: dp(10)

            MDTextField:
                id: search_field
                mode: "rectangle"
                icon_left: "magnify"
                size_hint_x: 0.9
                size_hint_y: None
                height: "40dp"
                pos_hint: {"center_x": 0.5}
                md_bg_color: 0.95, 0.92, 1, 1
                radius: [25,]
                on_text: root.on_search(self,self.text)

            MDLabel:
                text: "Saved Workouts"
                font_style: "H5"
                halign: "center"
                size_hint_y: None
                height: dp(40)

            ScrollView:
                size_hint_y: 1  # ✅ Expands to fill available space
                do_scroll_x: False
                do_scroll_y: True

                MDList:
                    id: exercise_list  # ✅ The list will be updated dynamically
                    size_hint_y: None
                    height: self.minimum_height

            MDBottomNavigation:
                id: bottom_nav
                panel_color: "#eeeeee"
                pos_hint: {"bottom": 1}
                size_hint_y: 1/4
                radius: dp(10)

                MDBottomNavigationItem:
                    name: "home"
                    text: "Home"
                    icon: "home"
                    on_tab_press: app.switch_to_screen("home")

                MDBottomNavigationItem:
                    name: "saved"
                    text: "Saved"
                    icon: "bookmark"
                    on_tab_press: app.switch_to_screen("saved")

                MDBottomNavigationItem:
                    name: "user"
                    text: "User"
                    icon: "account"
                    on_tab_press: app.switch_to_screen("user")
